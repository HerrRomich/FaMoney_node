{
  "name": "@famoney/commons-api",
  "version": "0.0.0",
  "description": "Common data for APIs",
  "author": "Roman Smushkevich <karmara.roman@gmail.com>",
  "homepage": "https://github.com/HerrRomich/FaMoney_node#readme",
  "license": "ISC",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build --watch --webpack --webpackPath webpack-hmr.config.js",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start --webpack --webpackPath webpack-hmr.config.js",
    "start:dev": "nest start --watch --webpack --webpackPath webpack-hmr.config.js",
    "start:debug": "nest build --watch --webpack --webpackPath webpack-hmr.config.js",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "devDependencies": {
    "@types/node": "^16.0.0",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "prettier": "^2.3.2",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.3",
    "ts-jest": "28.0.8",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "4.1.0",
    "typescript": "^4.7.4"
  }
}
